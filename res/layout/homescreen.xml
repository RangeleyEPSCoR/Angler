<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/homescreen_layout_full"
    android:orientation="vertical"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent">
    
    <LinearLayout
        android:id="@+id/lakes_gallery_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="3dp">
        <Gallery
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/lakes_gallery"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>
    </LinearLayout>
    
    <RelativeLayout
        android:id="@+id/homescreen_lakes_text_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lakes_gallery_layout">
	    <TextView
	        android:id="@+id/lakes_question_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Where do you want to fish?"
	        android:layout_alignParentLeft="true"
	        android:textSize="18dp"/>
	    <TextView
	        android:id="@+id/lake_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:textSize="18dp"
	        android:textStyle="bold"/>
    </RelativeLayout>
    <EditText
        android:id="@+id/search_box"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"
        android:layout_centerVertical="true"
        android:text="Search"/>
    
    <LinearLayout
       android:id="@+id/fish_gallery_layout"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
       android:layout_marginBottom="3dp">
       <Gallery
           xmlns:android="http://schemas.android.com/apk/res/android"
           android:id="@+id/fish_gallery"
           android:layout_width="fill_parent"
           android:layout_height="fill_parent"/>
   </LinearLayout>
   
   <RelativeLayout
        android:id="@+id/homescreen_fish_text_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/fish_gallery_layout">
	   <TextView
	        android:id="@+id/fish_question_text"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="What do you want to catch?"
	        android:layout_alignParentLeft="true"
	        android:textSize="18dp"/>
	   <TextView
	        android:id="@+id/fish_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:textSize="18dp"
	        android:textStyle="bold"/>
	</RelativeLayout>
</RelativeLayout>